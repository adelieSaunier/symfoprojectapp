{% extends 'base.html.twig' %}

{% block title %}Messagerie{% endblock %}

{% block body %}

    {% for message in app.flashes("message") %}
        <div class="p-3 my-2 rounded-2 success">
            {{message}}
        </div>
    {% endfor %}

    <div class="grix xs4 container">
        <div class="col-xs4">
            <h1>Messagerie</h1>
            <p>Reçus: {{ app.user.received|length }}</p>
            <p>Envoyés:{{ app.user.sent|length }}</p>
        </div>
    </div>
    <a href="{{ path("received") }}" class="btn primary">Messages reçus</a>
    <a href="{{ path("sent") }}">Messages envoyés</a>
    <a href="{{ path("send") }}">Envoyer un message</a>
{% endblock %}
